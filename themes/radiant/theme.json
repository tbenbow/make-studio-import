{
  "fonts": [
    { "family": "Switzer", "weight": 400, "style": "normal" },
    { "family": "Switzer", "weight": 500, "style": "normal" },
    { "family": "Switzer", "weight": 600, "style": "normal" },
    { "family": "Switzer", "weight": 700, "style": "normal" }
  ],
  "systemColors": {
    "brand": "#030712",
    "on-brand": "#ffffff",
    "base": "#ffffff",
    "base-muted": "#f9fafb",
    "base-alt": "#1f2937",
    "panel": "#ffffff",
    "fg": "#030712",
    "fg-muted": "#4b5563",
    "fg-alt": "#6b7280",
    "border": "#e5e7eb"
  },
  "customColors": [],
  "palette": {
    "primary": {
      "label": "primary",
      "colors": ["#f9fafb", "#d1d5db", "#6b7280", "#374151", "#111827"]
    },
    "accent1": {
      "label": "gradient-yellow",
      "colors": ["#fef9c3", "#fde68a", "#fff1be", "#fbbf24", "#92400e"]
    },
    "accent2": {
      "label": "gradient-pink",
      "colors": ["#fce7f3", "#f9a8d4", "#ee87cb", "#db2777", "#831843"]
    },
    "accent3": {
      "label": "gradient-purple",
      "colors": ["#ede9fe", "#c4b5fd", "#b060ff", "#7c3aed", "#4c1d95"]
    },
    "grays": {
      "label": "gray",
      "colors": ["#f9fafb", "#d1d5db", "#6b7280", "#374151", "#030712"]
    }
  },
  "headingTypography": {
    "heading-xl": {
      "fontFamily": "Switzer",
      "fontWeight": 500,
      "fontSize": 60,
      "lineHeight": 60,
      "letterSpacing": -2.4,
      "mobileFontSize": 36,
      "mobileLineHeight": 40
    },
    "heading-lg": {
      "fontFamily": "Switzer",
      "fontWeight": 500,
      "fontSize": 36,
      "lineHeight": 40,
      "letterSpacing": -1.4,
      "mobileFontSize": 30,
      "mobileLineHeight": 36
    },
    "heading-md": {
      "fontFamily": "Switzer",
      "fontWeight": 500,
      "fontSize": 24,
      "lineHeight": 32,
      "letterSpacing": -0.8,
      "mobileFontSize": 20,
      "mobileLineHeight": 28
    },
    "heading-sm": {
      "fontFamily": "Switzer",
      "fontWeight": 500,
      "fontSize": 16,
      "lineHeight": 24,
      "letterSpacing": -0.3,
      "mobileFontSize": 16,
      "mobileLineHeight": 24
    },
    "heading-xs": {
      "fontFamily": "Switzer",
      "fontWeight": 600,
      "fontSize": 14,
      "lineHeight": 20,
      "letterSpacing": 0,
      "mobileFontSize": 14,
      "mobileLineHeight": 20
    }
  },
  "bodyTypography": {
    "body-lg": {
      "fontFamily": "Switzer",
      "fontWeight": 400,
      "fontSize": 18,
      "lineHeight": 28,
      "letterSpacing": 0
    },
    "body-md": {
      "fontFamily": "Switzer",
      "fontWeight": 400,
      "fontSize": 16,
      "lineHeight": 28,
      "letterSpacing": 0
    },
    "body-sm": {
      "fontFamily": "Switzer",
      "fontWeight": 400,
      "fontSize": 14,
      "lineHeight": 24,
      "letterSpacing": 0
    }
  },
  "prose": {
    "elements": {
      "h1": { "typographyClass": "heading-xl", "marginBottom": 1.5 },
      "h2": { "typographyClass": "heading-lg", "marginBottom": 1.25 },
      "h3": { "typographyClass": "heading-md", "marginBottom": 1 },
      "h4": { "typographyClass": "heading-sm", "marginBottom": 0.75 },
      "h5": { "typographyClass": "heading-xs", "marginBottom": 0.5 },
      "h6": { "typographyClass": "heading-xs", "marginBottom": 0.5 },
      "p": { "typographyClass": "body-md", "marginBottom": 1.25 },
      "ul": { "typographyClass": "body-md", "marginBottom": 1.25 },
      "ol": { "typographyClass": "body-md", "marginBottom": 1.25 }
    },
    "lists": {
      "listStyleType": "disc",
      "indent": 1.5,
      "itemSpacing": 0.5,
      "nestedIndent": 1.5
    },
    "links": {
      "color": "primary",
      "hoverColor": "primary",
      "underline": "always"
    },
    "customCSS": "blockquote {\n  border-left: 3px solid #d1d5db;\n  padding-left: 1.5rem;\n  margin: 1.5rem 0;\n  font-style: italic;\n  color: #4b5563;\n}\n\npre {\n  background: #f9fafb;\n  padding: 1rem;\n  border-radius: 8px;\n  font-family: 'SF Mono', 'Fira Code', monospace;\n  font-size: 0.9em;\n  overflow-x: auto;\n  white-space: pre-wrap !important;\n  word-wrap: break-word !important;\n  border: 1px solid #e5e7eb;\n}\n\npre code {\n  white-space: pre-wrap !important;\n  word-wrap: break-word !important;\n}\n\ncode:not(pre code) {\n  background: #f9fafb;\n  padding: 0.15em 0.4em;\n  border-radius: 3px;\n  font-family: 'SF Mono', 'Fira Code', monospace;\n  font-size: 0.9em;\n}"
  },
  "customCSS": ".prose {\n  color: #4b5563;\n}\n.prose h1,\n.prose h2,\n.prose h3,\n.prose h4 {\n  color: #030712;\n}"
}
